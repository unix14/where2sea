<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addreport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/blue"
    tools:context=".ui.addreport.AddReportFragment">

    <TextView
        style="@style/AddReportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="75dp"
        android:text="@string/add_report_frag_i_want_to" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addReportFragSurfing"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_surf" />

        <TextView
            style="@style/ButtonTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_report_frag_to_surf" />

        <ImageView
            android:id="@+id/addReportFragDiving"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_scuba" />

        <TextView
            style="@style/ButtonTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_report_frag_to_dive" />

    </LinearLayout>
</FrameLayout>
